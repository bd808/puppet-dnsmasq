<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.dnsmasq</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Local DNS server</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "dnsmasq::config::executable" %></string>
      <string>--conf-file=<%= scope.lookupvar "dnsmasq::config::configfile" %></string>
      <string>--keep-in-foreground</string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <dict>
      <key>NetworkState</key>
      <true/>
    </dict>

  </dict>
</plist>
